<div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Welcome to Kantox Cafe!</h1>
      <p>We currently have the following offers:</p>
      <ul class="list-unstyled">
        <li>Green Tea: Buy-one-get-one-free</li>
        <li>Strawberries: Buy 3 or more, price drops to Â£4.50</li>
        <li>Coffee: Buy 3 or more, get 1/3 of total price off!</li>
      </ul>
    </div>
  </div>
<div class="product__item-group">
  <div class="row justify-content-between">
    {{#each publishedProducts as |item|}}
    <div class="card col-12 col-sm-6 col-md-4" style="width: 18rem;">
        <img 
          src="{{item.productImage}}" 
          class="card-img-top" alt="{{item.productName}}" 
          style=" display: block;
                  max-width:230px;
                  max-height:95px;
                  width: auto;
                  height: auto;
                  margin: auto;"
                  >
        <div class="card-body">
          <h5 class="card-title">{{item.productName}}</h5>
          <p class="card-text">${{item.price}}</p>
          <a {{action add item }} class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add to cart</a>
        </div>
    </div>
    {{/each}}
  </div>
</div>
{{yield}}